    @RenderSection("Scripts", required: false)

    <footer id="footer" class="footer-custom row nvabar text-center ">
        <div class="col-md-2">
        </div>
        <div class="col-md-8">
            <img class="logo" src="~/images/Marines.png" alt="Marines Insignia" width="100" />
            <img class="logo" src="~/images/Army.png" alt="Army Insignia" width="100" />
            <img class="logo" src="~/images/AirForce.png" alt="Air Force Insignia" width="100" />
            <img class="logo" src="~/images/Navy.png" alt="Navy Insignia" width="100" />
