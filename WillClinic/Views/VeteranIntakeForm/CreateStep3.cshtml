@model WillClinic.Models.IntakeFormViewModels.IntakeFormViewModel3

@{
    ViewData["Title"] = "Application";
    Layout = "~/Views/Shared/_IntakeLayout.cshtml";
}

<div class="row">
    <div>
        <div class="progress">
            <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 20%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <form asp-action="CreateStep3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h3>
                SECTION 3: Asset Information
            </h3>
            <h4>
                Please estimate the value of you estate, including cash, personal property, real estate (equity only), savings, life
                insurance and retirement assets (401(K) or IRA).
                Include the value of all property owned in your name. If you are married, list the value of the property owned by you
                and your spouse; if the property is community property, only list HALF of the value of the asset. You are acquired
                the property by gift, inheritance, before marriage, or have kept the asset in your individual name, please list the
                entire value.
                THE TOTAL VALUE OF YOUR ASSETS (your net worth) must be less than $500,000 ($1,000,000 if married) in
                order to qualify for the WA Vets Will Clinic.
            </h4>
            <hr />
            <div class="form-inline">
                <div class="form-group">
                    <div class="col-md-12">
                        <label asp-for="MonthlyIncome" class="control-label">Monthly Income:</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input asp-for="MonthlyIncome" class="form-control" placeholder="Monthly Income" />
                        <span asp-validation-for="MonthlyIncome" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-12">
                        <label asp-for="BankAccountAssets" class="control-label">Bank Accounts, CD's, etc:</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input asp-for="BankAccountAssets" class="form-control" />
                        <span asp-validation-for="BankAccountAssets" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-inline">
                <div class="form-group">
                    <div class="col-md-12">
                        <label asp-for="RealEstateAssets" class="control-label">Real Estate (equity only):</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input asp-for="RealEstateAssets" class="form-control" />
                        <span asp-validation-for="RealEstateAssets" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label asp-for="LifeInsuranceCashValue" class="control-label">Life Insurance (cash value only):</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input asp-for="LifeInsuranceCashValue" class="form-control" />
                        <span asp-validation-for="LifeInsuranceCashValue" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-inline">
                <div class="form-group">
                    <div class="col-md-12">
                        <label asp-for="RetirementAccounts" class="control-label">IRA or 401(k) cash value:</label>
                        <input asp-for="RetirementAccounts" class="form-control" />
                        <span asp-validation-for="RetirementAccounts" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label asp-for="BusinessInterest" class="control-label">Business Interests:</label>
                        <input asp-for="BusinessInterest" class="form-control" />
                        <span asp-validation-for="BusinessInterest" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-inline">
                <div class="form-group">
                    <div class="col-md-12">
                        <label asp-for="StockBonds" class="control-label">Stocks and Bonds:</label>
                        <input asp-for="StockBonds" class="form-control" />
                        <span asp-validation-for="StockBonds" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label asp-for="Pension" class="control-label">Pension Benefits:</label>
                        <input asp-for="Pension" class="form-control" />
                        <span asp-validation-for="Pension" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-inline">
                <div class="form-group">
                    <div class="col-md-12">
                        <label asp-for="MoneyOwedToYou" class="control-label">Money owed to you:</label>
                        <input asp-for="MoneyOwedToYou" class="form-control" />
                        <span asp-validation-for="MoneyOwedToYou" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label asp-for="OtherAssetsOrMoney" class="control-label">Other money and/or property:</label>
                        <input asp-for="OtherAssetsOrMoney" class="form-control" />
                        <span asp-validation-for="OtherAssetsOrMoney" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr />
            <div class="class-md-12">
                <div class="form-group col-md-offset-1 col-md-1 pull-left">
                    <a asp-controller="VeteranIntakeForm" asp-action="CreateStep2" class="btn btn-danger">Back</a>
                </div>

                <div class="form-group text-center col-md-8 pull-left">
                    <a asp-controller="VeteranIntakeForm" asp-action="SaveAndExit" class="btn btn-default">Save & Exit</a>
                </div>

                <div class="form-group col-md-2">
                    <input type="submit" value="Next" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>