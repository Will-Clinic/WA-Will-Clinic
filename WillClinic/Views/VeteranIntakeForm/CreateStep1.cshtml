@model WillClinic.Models.IntakeFormViewModels.IntakeFormViewModel1

@{
    ViewData["Title"] = "Application";
    Layout = "~/Views/Shared/_IntakeLayout.cshtml";
}

<div class="row">
    <div>
        <div class="progress">
            <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 6%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
        </div>

            <h3>SECTION 1: Basic Information</h3>
            <h4>Please provide your name, address, phone number, and email.</h4>
            <hr />
        <form asp-action="CreateStep1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="FullLegalName" class="control-label">Full legal name: *</label>
                        <h5>Include your first, middle, and last names. Example: John Smith Doe</h5>
                        <input asp-for="FullLegalName" class="form-control" text="@Model.FullLegalName" />
                        <span asp-validation-for="FullLegalName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label">Address: *</label>
                        <h5>Street Address, City, and State</h5>
                        <input asp-for="Address" class="form-control" text="@Model.Address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label">Phone Number: *</label>
                        <h5>Include area code. Example: 1113335555</h5>
                        <input asp-for="PhoneNumber" type="number" class="form-control" text="@Model.PhoneNumber" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <hr />
            <div class="class-md-12">
                <div class="form-group col-md-offset-1 col-md-1 pull-left">
                    <a asp-controller="VeteranIntakeForm" asp-action="CreateStep0" class="btn btn-danger">Back</a>
                </div>

                <div class="form-group text-center col-md-8 pull-left">
                    <a asp-controller="VeteranIntakeForm" asp-action="SaveAndExit" class="btn btn-default">Save & Exit</a>
                </div>

                <div class="form-group col-md-2">
                    <input type="submit" value="Next" class="btn btn-success" />
                </div>
            </div>

        </form>
    </div>
</div>